<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sebat.resume.DetailTurkTeams">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/detailie"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Information"
        android:id="@+id/Titles"
        android:layout_alignBottom="@+id/detailie"
        android:layout_toEndOf="@+id/detailie"
        android:paddingLeft="20dp"
        android:textSize="16pt"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView2"
        android:layout_below="@+id/detailie"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/teaminfo"/>
    </ScrollView>



</RelativeLayout>
